<Window x:Class="Geometry.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geometry"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Path Fill="Red" Stroke="Black">
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="200,200" RadiusX="60" RadiusY="60"/>
                    <EllipseGeometry Center="200,200" RadiusX="50" RadiusY="50"/>
                    <RectangleGeometry Rect="195,150,10,100">
                        <RectangleGeometry.Transform>
                            <RotateTransform CenterX="200" CenterY="200" Angle="30"/>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</Window>
